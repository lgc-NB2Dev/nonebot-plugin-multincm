{%- extends 'base.html.jinja' -%}

{% block head -%}
<style>
  :root {
    --c-bg-0: #282c34;
    --c-bg-1: #31353f;
    --c-fg-pri: #abb2bf;
    --c-fg-sec: #848b98;
  }

  body {
    background-color: var(--c-bg-0);
    color: var(--c-fg-pri);
  }

  main {
    width: 600px;
    gap: 12px;
  }

  .lyric-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .lyric-group .main {
    font-size: 20px;
    font-weight: bold;
  }
</style>
{%- endblock %}

{% block main -%}
{% for group in groups -%}
<div class="lyric-group">
  {% for it in group -%}
  <div {% if loop.first %}class="main" {% endif %}>{{ it }}</div>
  {%- endfor %}
</div>
<div class="footer text-center">
  Generated by nonebot-plugin-multincm v{{ config.plugin_version }}
</div>
{%- endfor %}
{%- endblock %}
