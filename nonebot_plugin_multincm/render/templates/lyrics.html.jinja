{%- extends 'base.html.jinja' -%}

{% block head -%}
<style>
  main {
    width: 600px;
    gap: 12px;
  }

  .lyric-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .lyric-group .main {
    font-size: 20px;
    font-weight: bold;
  }
</style>
{%- endblock %}

{% block main -%}
{% for group in groups -%}
<div class="lyric-group">
  {% for it in group -%}
  {% if it %}<div {% if loop.first %}class="main" {% endif %}>{{ it }}</div>{% endif %}
  {%- endfor %}
</div>
{%- endfor %}
<div class="footer text-center">
  Generated by nonebot-plugin-multincm v{{ config.plugin_version }}
</div>
{%- endblock %}
