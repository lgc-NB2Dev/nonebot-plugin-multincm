{%- extends 'base.html.jinja' -%}

{% block head -%}
<style>
  main {
    width: 600px;
    gap: 12px;
  }

  .lyric-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .lyric-group .main {
    font-size: 20px;
    font-weight: bold;
  }

  .lyric-group .roma {
    font-size: 14px;
  }
</style>
{%- endblock %}

{% block main -%}
{% for group in groups -%}
<div class="lyric-group">
  {% for n, r in group %}<div class="{{ n }}">{{ r }}</div>
  {% endfor -%}
</div>
{%- endfor %}
<div class="footer text-center">
  Generated by nonebot-plugin-multincm v{{ config.plugin_version }}
</div>
{%- endblock %}
